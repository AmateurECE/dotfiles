Subject: [PATCH 2/2] Setup sway desktop

 * Increase alacritty font size to 10
 * Use the default sway background image

diff --git a/home/.config/alacritty/alacritty.yml b/home/.config/alacritty/alacritty.yml
index 0a8c266..d9cb7f8 100644
--- a/home/.config/alacritty/alacritty.yml
+++ b/home/.config/alacritty/alacritty.yml
@@ -156,7 +156,7 @@ font:
     #style: Bold Italic
 
   # Point size
-  size: 8
+  size: 10
 
   # Offset is the extra space around each character. `offset.y` can be thought
   # of as modifying the line spacing, and `offset.x` as modifying the letter
diff --git a/home/.config/sway/config b/home/.config/sway/config
index cbddf5a..2a3dd99 100644
--- a/home/.config/sway/config
+++ b/home/.config/sway/config
@@ -31,7 +31,7 @@ set $lock gtklock -s ~/.config/gtklock/style.css
 # Output
 ###
 
-output * bg /usr/share/backgrounds/sway-background.png fill scale 2
+output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
 
 ###############################################################################
 # Idle
